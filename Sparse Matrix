#include <stdio.h>
#include <stdlib.h>
int isSparse(int a[3][3] , int row , int column , int *count ){
    for(int i =0 ; i<row; i++){ 
        for(int j=0; j<column; j++){
            if(a[i][j] != 0) (*count)=(*count)+1; // count the non zeroes
        }
    }
    if((float)*count/(float)(row*column) <= 1.0/3.0) { // check the condition
        return 1;
    }
    else return 0;
}
int ** sparseMatrix(int a[3][3],int row , int column , int count){
    // Creating the 2D Array that store the non zeroes elements
    int **array=(int **)malloc(sizeof(int)*3);
    for(int i=0; i<3; i++){
        array[i]=(int*)malloc(sizeof(int)*count+1); // at each row count+1 column is created
    }
   
    array[0][0]=row; // it will store the row of the original matrix
    array[1][0]=column; // it will store the column of the original matrix
    array[2][0]=row*column; // it will store total elements original matrix
    int k=1;
    for(int i=0; i<row; i++){
        for(int j=0; j<column; j++){
            if(a[i][j]!=0){
                printf("row = %d col = %d \n",i,j);
                array[0][k]=i;
                array[1][k]=j;
                array[2][k]=a[i][j];
                k++;
            } 
        }
    }
    return array;
}

int main() {
    printf("Enter the Row and Column of the Sparse Matrix : ");
    int **newArray;
        int count=0;
        // int row,column;
        // scanf("%d%d",&row,&column);
        int row=4, column=4;
        int arr[4][4]={6,0,0,0,1,2,0,0,0,0,0,0,0,0,0,6};
        // int arr[row][column];
        // printf("Enter %d elements \n",row*column);
        // for(int i =0 ; i<row; i++){
        //     for(int j=0; j<column; j++)
        //         scanf("%d",&arr[i][j]);
        // }
        printf("The Matrix you entered\n");
        for(int i =0 ; i<row; i++){
            for(int j=0; j<column; j++){
                printf("%d ",arr[i][j]);
            }
            printf("\n");
        }
    if(isSparse(arr,row,column,&count)){
        printf("The given matrix is sparse matrix \n");
        newArray = sparseMatrix(arr,row,column,count);
    }else{
        printf("The given matrix is not Sparse Matrix \n");
        return 0;
    }
     printf("The Compressed Matrix \n");
        for(int i =0 ; i<3; i++){
            for(int j=1; j<=count+1; j++){
                printf("%d ",newArray[i][j]);
            }
            printf("\n");
        }
        // printf("The number of the non zeroes is %d \n",count);
    
    return 0;
}
