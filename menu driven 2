    printf("Enter the Row and Column of the array 1 : ");
    int r1,c1;
    scanf("%d%d",&r1,&c1);
    int arr1[r1][c1];
    printf("Enter %d elements \n",r1*c1);
    for(int i =0 ; i<r1; i++){
        for(int j=0; j<c1; j++)
            scanf("%d",&arr[i]);
    }
    printf("Enter the Row and Column of the array 2 : ");
    int r2,c2;
    scanf("%d%d",&r2,&c2);
    int arr2[r2][c2];
    printf("Enter %d elements \n",r2*c2);
    for(int i =0 ; i<r1; i++){
        for(int j=0; j<c1; j++)
            scanf("%d",&arr[i]);
    }
    while (1){
        printf("Choose the option : \n");
        printf("1. Addition \n");
        printf("2. Subtraction \n");
        printf("3. Multiplication \n");
        printf("4. Transpose \n");
        printf("5. Exit \n");
        int comd;
        scanf("%d",&comd);
        if(comd == 1){
            if(r1==r2 && c1==c2){
                addition(arr1,arr2,r1,c1);
            }else{
                printf("Addition is not possible \n");
            }
        }
        else if(comd == 2){
            if(r1==r2 && c1==c2){
                subtraction(arr1,arr2,r1,c1);
            }else{
                printf("Subtraction is not possible \n");
            }
        }
        else if(comd == 3){
            multiplication( arr1,r1,c1,arr2,r2,c2);
        }
        else if(comd == 4){
            // transpose( arr1,r1,c1,arr2,r2,c2);
        }
